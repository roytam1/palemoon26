DEPTH           = @DEPTH@
topsrcdir       = @top_srcdir@
srcdir          = @srcdir@
VPATH           = @srcdir@

include $(DEPTH)/config/autoconf.mk

MSVC_ENABLE_PGO := 1
FORCE_STATIC_LIB= 1
ifeq ($(OS_TARGET),WINNT)
VISIBILITY_FLAGS =
endif

DISABLED_CSRCS           = \
                cubeb.c \
                $(NULL)

ifeq ($(OS_TARGET),WINNT)
DISABLED_CSRCS           += \
                cubeb_winmm.c \
                $(NULL)
DISABLED_CSRCS     += \
                cubeb_resampler.cpp \
                $(NULL)
DEFINES         += -DUSE_WINMM
ifeq (1,$(MOZ_SAMPLE_TYPE_FLOAT32))
DISABLED_CSRCS     += \
                cubeb_wasapi.cpp \
                $(NULL)
DEFINES         += -DUSE_WASAPI
endif
endif

ifeq ($(OS_TARGET),Android)
ifneq ($(MOZ_WIDGET_TOOLKIT),gonk)
DISABLED_CSRCS           += \
                cubeb_audiotrack.c \
                $(NULL)
DEFINES         += -DUSE_AUDIOTRACK
endif
DISABLED_CSRCS           += \
                cubeb_opensl.c \
                $(NULL)
DISABLED_CSRCS     += \
                cubeb_resampler.cpp \
                $(NULL)
DEFINES         += -DUSE_OPENSL
endif

ifeq ($(OS_TARGET),Darwin)
DISABLED_CSRCS           += \
                cubeb_audiounit.c \
                $(NULL)
DEFINES         += -DUSE_AUDIOUNIT
endif

ifeq ($(OS_ARCH),OpenBSD)
DISABLED_CSRCS           += \
                cubeb_sndio.c \
                $(NULL)
DEFINES         += -DUSE_SNDIO
endif

ifdef MOZ_ALSA
DISABLED_CSRCS           += \
                cubeb_alsa.c \
                $(NULL)
DEFINES         += -DUSE_ALSA
endif

ifdef MOZ_OSS
DISABLED_CSRCS           += \
                cubeb_oss.c \
                $(NULL)
DEFINES         += -DUSE_OSS
endif

ifdef MOZ_PULSEAUDIO
ifeq ($(MOZ_WIDGET_TOOLKIT),gonk)
DEFINES         += -DDISABLE_LIBPULSE_DLOPEN
endif
DISABLED_CSRCS           += \
                cubeb_pulse.c \
                $(NULL)
DEFINES         += -DUSE_PULSE
endif

include $(topsrcdir)/config/rules.mk

CFLAGS += \
        $(MOZ_ALSA_CFLAGS) \
        $(MOZ_PULSEAUDIO_CFLAGS) \
        $(NULL)

ifeq ($(MOZ_WIDGET_TOOLKIT),gonk)
LOCAL_INCLUDES += -I$(ANDROID_SOURCE)/frameworks/wilhelm/include \
                  -I$(ANDROID_SOURCE)/system/media/wilhelm/include
endif
